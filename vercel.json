{
  "rewrites": [
    { 
      "source": "/((?!robots\\.txt|sitemap\\.xml|favicon|images|assets).*)", 
      "destination": "/" 
    }
  ],
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ]
}